---
import Layout from "../layouts/Layout.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<Layout title="Blog">
  <h2>Posts</h2>
  <ul>
    {
      allPosts.map((post) => {
        return (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        );
      })
    }
  </ul>
</Layout>

<style>
  h2 {
    margin-top: 2rem;
  }
</style>
